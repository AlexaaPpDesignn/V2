<portlet-app version="2.0"
  xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

  <portlet>
    <portlet-name>digitalWorkplaceRecentDocuments</portlet-name>
    <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
    <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/recentDocuments.html</value>
    </init-param>
    <init-param>
      <description>List of profiles that can be used to enable this portlet</description>
      <name>exo.profiles</name>
      <value>ecms</value>
    </init-param>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <portlet-info>
      <title>Digital Workplace Recents Documents</title>
    </portlet-info>
  </portlet>

  <portlet>
    <portlet-name>digitalWorkplaceSharedDocuments</portlet-name>
    <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
    <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/sharedDocuments.html</value>
    </init-param>
    <init-param>
      <description>List of profiles that can be used to enable this portlet</description>
      <name>exo.profiles</name>
      <value>ecms</value>
    </init-param>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <portlet-info>
      <title>Digital Workplace Shared Documents</title>
    </portlet-info>
  </portlet>

  <portlet>
    <portlet-name>digitalWorkplaceFavoriteDocuments</portlet-name>
    <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
    <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/favoriteDocuments.html</value>
    </init-param>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <portlet-info>
      <title>Digital Workplace Favorite Documents</title>
    </portlet-info>
  </portlet>

  <portlet>
    <portlet-name>digitalWorkplaceEvents</portlet-name>
    <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
    <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/events.jsp</value>
    </init-param>
    <init-param>
      <description>List of profiles that can be used to enable this portlet</description>
      <name>exo.profiles</name>
      <value>calendar</value>
    </init-param>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <portlet-info>
      <title>Digital Workplace Events</title>
    </portlet-info>
  </portlet>

  <portlet>
    <portlet-name>digitalWorkplaceTasks</portlet-name>
    <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
    <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/tasks.jsp</value>
    </init-param>
    <init-param>
      <description>List of profiles that can be used to enable this portlet </description>
      <name>exo.profiles</name>
      <value>task</value>
    </init-param>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <portlet-info>
      <title>Digital Workplace Tasks</title>
    </portlet-info>
  </portlet>

</portlet-app>